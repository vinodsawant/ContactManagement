{
  "name": "contact-details-management-system",
  "version": "1.0.0",
  "description": "App to Display ,Create, Edit and Delete contacts",
  "main": "index.js",
  "scripts": {
    "clean:dist": "rimraf dist/css/",
    "assets": "ncp ./resources/images/ ./dist/images",
    "html": "ncp ./src/index.html ./dist/index.html",
    "json-server": "json-server ./db.json",
    "test": "jest",
    "dev": "webpack-dev-server --config ./build/webpack.config.js --hot --inline --open --mode development",
    "scss:build": "node-sass --include-path resources/scss --output-style compressed resources/scss/ -o dist/css/",
    "scss:watch": "node-sass --include-path resources/scss/ --output-style compressed --watch resources/scss/ -o dist/css/",
    "start": "npm-run-all -l -p json-server assets html scss:build scss:watch dev"
  },
  "keywords": [
    "Contact",
    "Details",
    "Management"
  ],
  "author": "Vinod Sawant",
  "babel": {
    "presets": [
      "env",
      "react",
      "stage-2"
    ]
  },
  "dependencies": {
    "axios": "^0.18.0",
    "babel-jest": "^21.2.0",
    "babel-polyfill": "^6.26.0",
    "history": "4.7.2",
    "jest": "^21.2.1",
    "jest-cli": "^21.2.1",
    "json-server": "^0.14.0",
    "lodash.isempty": "^4.4.0",
    "ncp": "^2.0.0",
    "raf": "^3.4.0",
    "react": "^16.4.2",
    "react-bootstrap": "^0.32.4",
    "react-dom": "^16.4.2",
    "react-modal": "^3.5.1",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.3.1",
    "react-router-redux": "5.0.0-alpha.8",
    "redux": "^4.0.0",
    "redux-form": "^7.4.2",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "css-loader": "^1.0.0",
    "enzyme": "^2.9.1",
    "enzyme-adapter-react-16": "^1.3.0",
    "file-loader": "^2.0.0",
    "json-loader": "^0.5.7",
    "ncp": "^2.0.0",
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.3",
    "react-addons-test-utils": "^15.6.2",
    "react-hot-loader": "^4.3.5",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.22.1",
    "url-loader": "^1.1.1",
    "webpack": "^4.17.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.6"
  }
}
